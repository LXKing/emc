<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="emc-sysmagent" owner="emc"/>
    <!-- 使用zookeeper注册中心暴露服务地址   端口是zookeeper 中配置的2181-->
    <dubbo:registry protocol="zookeeper" address="192.168.171.82:2181,192.168.171.82:2181" />
    <!--<dubbo:registry protocol="zookeeper" address="localhost:2181" />-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>
    <!-- <dubbo:registry address="multicast://224.5.6.7:1234" /> -->
    <!-- 设置服务传输协议及端口 \服务线程池大小-->
    <dubbo:protocol name="dubbo" port="20880" threads="200" server="netty"  serialization="kryo" />
    <!-- 	<dubbo:protocol name="http" port="20881" threads="200" serialization="kryo"/>  -->
    <dubbo:protocol name="hessian" port="20882" threads="200"  />
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>
    <!-- 具体的实现bean -->
    <bean id="seasonService" class="com.huak.season.SeasonServiceImpl"/>
    <bean id="menuService" class="com.huak.auth.MenuServiceImpl"/>
    <!-- 声明需要暴露的服务接口 -->
    <bean id="seasonService" class="com.huak.season.SeasonServiceImpl"></bean>
    <bean id="roleService" class="com.huak.auth.RoleServiceImpl"></bean>
    <dubbo:service interface="com.huak.season.SeasonService" ref="seasonService" timeout="300"  loadbalance="random" executes="200"
                   actives="0"  owner="emc" version="1.0"/>
    <dubbo:service interface="com.huak.auth.RoleService" ref="roleService"  timeout="300"  loadbalance="random" executes="200"
                   actives="0"  owner="emc" version="1.0"/>
    <dubbo:service interface="com.huak.season.SeasonService" ref="seasonService"/>
    <dubbo:service interface="com.huak.auth.MenuService" ref="menuService"/>
    <bean id="roleService" class="com.huak.auth.RoleServiceImpl"/>
    <dubbo:service interface="com.huak.auth.RoleService" ref="roleService"/>


    <!-- 组织机构接口配置-->
    <bean id="orgService" class="com.huak.org.OrgServiceImpl" />
    <dubbo:service interface="com.huak.org.OrgService" ref="orgService"/>

</beans>